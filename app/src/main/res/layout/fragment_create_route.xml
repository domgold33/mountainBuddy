<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/create_route_option_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="6">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:text="Notice"
            android:id="@+id/button_flag_start"
            android:layout_weight="1"
            android:background="@color/color_white" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Start"
            android:id="@+id/button_flag_point"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:textColor="#FFFFFFFF" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Picture"
            android:id="@+id/button_flag_end"
            android:layout_weight="1"
            android:background="@color/color_white" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Start"
            android:id="@+id/button_delete"
            android:layout_weight="1.5"
            android:background="@color/color_white"
            android:textColor="#FFFFFFFF" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Picture"
            android:id="@+id/button_create"
            android:layout_weight="1.5"
            android:background="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/infobar_height"
        android:id="@+id/main_infor_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:background="#fff5f5f5">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:background="#fff5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" 2.5 km"
            android:id="@+id/create_route_infor_bar_distance"
            android:layout_marginTop="@dimen/infobar_text1_margin_top"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Distance"
            android:layout_marginTop="@dimen/infobar_text2_margin_top"
            android:id="@+id/create_route_static_Distance"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:background="#fff5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" 1000 m"
            android:id="@+id/create_route_infor_bar_max_height"
            android:layout_marginTop="@dimen/infobar_text1_margin_top"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max Height"
            android:layout_marginTop="@dimen/infobar_text2_margin_top"
            android:id="@+id/create_route_static_height"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    </LinearLayout>


</RelativeLayout>
